{
  "name": "desktop",
  "version": "0.1.0",
  "description": "AniVault Desktop App",
  "author": "AniVault",
  "type": "module",
  "main": "./out/main/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "prebuild": "electron-vite build",
    "build": "electron-builder --win --x64",
    "preview": "electron-vite preview"
  },
  "build": {
    "appId": "com.anivault.app",
    "productName": "AniVault",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "out/**",
      "package.json"
    ],
    "npmRebuild": false,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon/anivault.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon/anivault.ico",
      "uninstallerIcon": "assets/icon/anivault.ico",
      "installerHeaderIcon": "assets/icon/anivault.ico"
    },
    "linux": {
      "icon": "assets/icon"
    },
    "mac": {
      "icon": "assets/icon/anivault.icns"
    }
  },
  "dependencies": {
    "@anivault/shared": "workspace:*",
    "@anivault/ui": "workspace:*",
    "atomically": "^1.7.0",
    "bufferutil": "^4.0.9",
    "builder-util-runtime": "^9.2.6",
    "conf": "^10.2.0",
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.5.1",
    "utf-8-validate": "^6.0.5",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^39.2.6",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
