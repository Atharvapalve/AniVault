{
  "name": "anivault",
  "version": "0.1.0",
  "private": true,
  "description": "The Ultimate Anime Ecosystem",
  "scripts": {
    "dev:desktop": "pnpm --filter desktop dev",
    "dev:extension": "pnpm --filter extension dev",
    "dev:web": "pnpm --filter web dev",
    "dev:website": "pnpm --filter @anivault/website dev",
    "build:desktop": "pnpm --filter desktop build",
    "build:extension": "pnpm --filter extension build",
    "build:web": "pnpm --filter web build",
    "build:website": "pnpm --filter @anivault/website run build",
    "vercel-build": "pnpm --filter @anivault/website run build",
    "build": "pnpm -r build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "electron-builder": "^24.13.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  }
}
